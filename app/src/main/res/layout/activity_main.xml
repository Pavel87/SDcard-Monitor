<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sd_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/start"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:background="@drawable/play_button"
                android:textStyle="bold" />

            <Button
                android:id="@+id/stop"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/stop_button_dis"
                android:enabled="false"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/testBroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST"
            android:textStyle="bold"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/scrollText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/bg_log_rect">

            <TextView
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:textSize="11sp" />
        </ScrollView>

        <Button
            android:id="@+id/export"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/btn_export_background"
            android:textColor="@color/btn_export_text"
            android:text="Export Log"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
